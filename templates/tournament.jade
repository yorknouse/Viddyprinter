extends layout

block content

  h1
    a(href = '/')
      | Tournaments
    | /#{name}

  form(method='post' action='/')
    table
      thead
        tr
          th= "Name"
          th= "Time"
          th= "Where"
          th= "Points available"
          th= ""
          th= "Score"
          th= "Score"
          th= ""
      tbody
        each fixture in fixtures
          tr
            td
              input(
                type='text',
                id='name-' + fixture.id,
                name='name-' + fixture.id,
                value=fixture.name
                )
            td
              input(
                type='time',
                id='time-' + fixture.id,
                name='time-' + fixture.id,
                value=fixture.time
              )
            td
              input(
                type='text',
                id='location-' + fixture.id,
                name='location-' + fixture.id,
                value=fixture.location
              )
            td
              input(
                type='number',
                id='pointsAvailable-' + fixture.id,
                name='pointsAvailable-' + fixture.id,
                min='0',
                placeholder='0',
                value=fixture.pointsAvailable
              )
            td
              input(
                type='text',
                id='home-' + fixture.id,
                name='home-' + fixture.id,
                placeholder='York',
                value=fixture.home
              )
            td
              input(
                type='number',
                id='homeScore-' + fixture.id,
                name='homeScore-' + fixture.id,
                min='0',
                step='any',
                value=fixture.homeScore
              )
            td
              input(
                type='number',
                id='awayScore-' + fixture.id,
                name='awayScore-' + fixture.id,
                min='0',
                step='any',
                value=fixture.awayScore
              )
            td
              input(
                type='text'
                id='away-' + fixture.id,
                name='away-' + fixture.id,
                placeholder='Durham',
                value=fixture.away
              )
    input(type='submit' value='Save changes')

  table#scoreboard
    thead
      tr
        th.york.
          York
        th.durham.
          Durham
    tbody
      tr
        td
          big.york#homeScore.
        td
          big.durham#awayScore.

  #progress
